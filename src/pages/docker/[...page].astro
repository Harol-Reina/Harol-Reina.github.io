---
import type { GetStaticPathsOptions, Page } from 'astro';
import { type CollectionEntry, getCollection } from 'astro:content';
import DockerPreview from '../../components/DockerPreview.astro';
import Pagination from '../../components/Pagination.astro';
import Subscribe from '../../components/Subscribe.astro';
import siteConfig from '../../data/site-config';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sortItemsByDateDesc } from '../../utils/data-utils';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const dockers = (await getCollection('dockers')).sort(sortItemsByDateDesc);
    return paginate(dockers, { pageSize: siteConfig.postsPerPage || 4 });
}

type Props = { page: Page<CollectionEntry<'dockers'>> };

const { page } = Astro.props;
const blog = page.data;
---

<BaseLayout
    title="Docker & Contenedores"
    description="Guías completas sobre Docker, Docker Compose, containerización, mejores prácticas y ejemplos prácticos para desarrolladores y DevOps Engineers."
    image={{ src: '/post-4.jpg', alt: 'Docker y contenedores' }}
    showHeader={false}
>
    <h1 class="mb-12 text-2xl leading-tight font-serif italic sm:mb-16 sm:text-4xl">Docker & Contenedores</h1>
    {blog.map((post) => <DockerPreview post={post} class="mb-10 sm:mb-12" />)}
    <Pagination page={page} class="my-16 sm:my-24" />
    <Subscribe class="my-16 sm:my-24" />
</BaseLayout>
